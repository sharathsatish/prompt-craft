{
  "extends": "markdownlint/style/all",
  "MD001": false,
  "MD003": {
    "style": "atx"
  },
  "MD007": {
    "indent": 2
  },
  "MD013": {
    "line_length": 120,
    "heading_line_length": 120,
    "code_block_line_length": 120,
    "tables": false
  },
  "MD024": {
    "siblings_only": true
  },
  "MD026": {
    "punctuation": ".,;:!"
  },
  "MD033": {
    "allowed_elements": [
      "details",
      "summary",
      "br",
      "sup",
      "sub",
      "kbd",
      "mark"
    ]
  },
  "MD041": false,
  "MD046": {
    "style": "fenced"
  },
  "MD048": {
    "style": "backtick"
  },
  "MD049": {
    "style": "underscore"
  },
  "MD050": {
    "style": "asterisk"
  }
}
